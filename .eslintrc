{
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "modules": true,
    "arrowFunctions": true,
    "classes": true,
    "blockBindings": true,
    "templateStrings": true,
    "jsx": true
  },
  "rules": {
    "indent": [
      2,
      2, {
        "SwitchCase": 1,
        "VariableDeclarator": 2
      }
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "comma-style": [
      2,
      "last"
    ],
    "key-spacing": [
      2, {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "no-warning-comments": [
      1, {
        "terms": [
          "todo",
          "fixme",
          "any other term"
        ],
        "location": "anywhere"
      }
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "newline-after-var": [
      2,
      "always"
    ],
    "no-spaced-func": 2,
    "func-style": [
      2,
      "declaration"
    ],
    "no-undefined": 1,
    "no-undef": 1,
    "no-console": 1,
    "no-unused-vars": 2,
    "no-var": 2,
    "arrow-spacing": 2,
    "eqeqeq": 2,
    "no-else-return": 2,
    "strict": [1, "global"],
    "react/jsx-no-undef": 2,
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-quotes": [2, "single", "avoid-escape"]
  },
  "extends": "eslint:recommended"
}
